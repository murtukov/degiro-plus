{
  "manifest_version": 3,
  "name": "DEGIRO Plus",
  "description": "Enhance facilities of the Degiro Trader with additional features",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "js": [
        "tv.js",
        "content.js",
        "icons/nyse_icons.js",
        "icons/nasdaq_icons.js",
        "icons/tradegate_icons.js",
        "icons/xetra_icons.js",
        "icons/euronext_icons.js",
        "icons/lse_icons.js",
        "icons/tsx_icons.js",
        "icons/omx_icons.js"
      ],
      "css": [
        "css/content.css",
        "css/stock-logos.css"
      ],
      "matches": [
        "https://trader.degiro.nl/*"
      ]
    },
    {
      "js": [
        "tradingview-positions.js"
      ],
      "run_at": "document_start",
      "css": [
        "css/tradingview-positions.css"
      ],
      "matches": [
        "https://www.tradingview.com/chart/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "tv.js" ],
      "matches": [
        "https://trader.degiro.nl/*"
      ]
    }
  ]
}